<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show all data</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h2>All chats</h2>
    <form method="GET" action="/chats/new">
        <button>new chat</button>
    </form>
    <% for(chat of chats){ %>
        <div class="chat">
            <p><i>From:<%=chat.from %></i></p>
            <div class="msg">
                <p><%=chat.message %></p>
                <form method="get" action="/chats/<%=chat._id%>/edit">
                    <button>edit</button>
                </form>
                <br><br>
                <form method="post" action="/chats/<%=chat._id%>?_method=delete">
                    <button>delete</button>
                </form>

            </div>
            <p><i>Recceived by:<%=chat.to %></i></p>
            <p><%=chat.created_at.toString().split(" ")[4]%></p>
            <p><%=chat.created_at.toString().split(" ").slice(0,4).join("-")%></p>
             <hr>
        </div>
        <br> <br>
  <%  } %>
</body>
</html>